[build]
  command = "cd frontend && npm run build"
  publish = "frontend/build"  # React creates 'build' folder by default

[build.environment]
  NODE_ENV = "production"

# Critical: Function routing must come BEFORE SPA catch-all
[[redirects]]
  from = "/.netlify/functions/*"
  to = "/.netlify/functions/:splat"
  status = 200

[[redirects]]
  from = "/api/*"
  to = "/.netlify/functions/api/:splat"
  status = 200

# SPA catch-all - MUST BE LAST
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200

[functions]
  node_bundler = "esbuild"
  directory = "netlify/functions"